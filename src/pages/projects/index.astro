---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Construction Robot: Blown Insulation (Capstone)"
    img="/construction_robot.png"
    desc="A mobile robot capable of delivering blown insulation autonomously."
    url="/projects/construction-robot/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Basketball Game Autozooming Bot"
    img="/bball_autozoom.gif"
    desc="A bot that automatically zooms in and out in a basketball game, focusing on the play."
    url="/projects/bball-autozoom/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Robot Arm Pick and Place"
    img="/robot_pick_place.gif"
    desc="A robot arm programmed to pick and place static and moving blocks."
    url="/projects/robot-pick-place/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Efficient LLM for Summarization"
    img="/efficient_llm_pruned.png"
    desc="Pruned and fine-tuned LLM for summarization tasks."
    url="/projects/efficient-llm/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="3D Reconstruction of Forest Scenery"
    img="/3d_forest_gt.png"
    desc="3D reconstruction of forest scenery using pictures captured from a walk in the forest."
    url="/projects/3d-forest/"
  />
</BaseLayout>
